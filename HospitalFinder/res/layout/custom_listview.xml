<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="121dp"
        android:layout_height="91.5dp"
        android:layout_gravity="center"
        android:paddingLeft="1.5dp"
        android:paddingRight="1.5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <hachthon.hospitalfinder.helperMethod.TextCustom
            android:id="@+id/hospitalName"
            style="@style/textArialMT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="10.5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/ratingBar1"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.5dp"
                android:layout_marginRight="3.5dp"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.5" />

            <hachthon.hospitalfinder.helperMethod.TextCustom
                android:id="@+id/rating"
                style="@style/textAvenir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#979797"
                android:textSize="12sp" />

            <hachthon.hospitalfinder.helperMethod.TextCustom
                android:id="@+id/distance"
                style="@style/textAvenir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <hachthon.hospitalfinder.helperMethod.TextCustom
            android:id="@+id/price"
            style="@style/textAvenir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#068270"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <hachthon.hospitalfinder.helperMethod.TextCustom
                android:id="@+id/address"
                style="@style/textAvenir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="10.5dp"
				android:maxWidth="180dp"
                android:paddingRight="10.5dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="10sp" />

                    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
                        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
            <hachthon.hospitalfinder.helperMethod.TextCustom
                android:id="@+id/time"
                style="@style/textAvenir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15.5dp"

                android:textColor="#979797"
                android:textSize="12sp" />
        </LinearLayout>
            </LinearLayout>
    </LinearLayout>

</LinearLayout>