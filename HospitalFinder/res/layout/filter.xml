<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Open Now"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switch_OpenNow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textOff=""
                android:textOn="Yes" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c7d3ab" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Consulting fee"
                android:textColor="#000000"
                android:textSize="18sp" />

            <hachthon.hospitalfinder.custom.SeekbarWithIntervals
                android:id="@+id/seekbarFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="325"
                android:progress="0" >
            </hachthon.hospitalfinder.custom.SeekbarWithIntervals>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <View
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c7d3ab" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Distance"
                android:textColor="#000000"
                android:textSize="18sp" />

            <hachthon.hospitalfinder.custom.SeekbarWithIntervals
                android:id="@+id/seekbarDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="32"
                android:progress="0" >
            </hachthon.hospitalfinder.custom.SeekbarWithIntervals>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <View
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c7d3ab" />

            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Rating"
                android:textColor="#000000"
                android:textSize="18sp" />

            <hachthon.hospitalfinder.custom.SeekbarWithIntervals
                android:id="@+id/seekbarRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="5"
                android:progress="0" >
            </hachthon.hospitalfinder.custom.SeekbarWithIntervals>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <View
                android:id="@+id/text22"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c7d3ab" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Feature Programs"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switch_Feature"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textOff=""
                android:textOn="All" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/obamaCare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Obama Care"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/lowIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Low Income"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/charityProgram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Charity Program"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/AAAProgram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AAA Program"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/BBBProgram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BBB Program"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/CCCProgram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CCC Program"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/DDDProgram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DDD Program"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/EEEProgram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EEE Program"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/FFFProgram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FFF Program"
                    android:textSize="13sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>